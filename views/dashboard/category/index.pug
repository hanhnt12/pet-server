extends ../layout

block content
  h1.page-header= title
  each category, index in categories
    div.row.user-row
      div.col-xs-3.col-sm-2.col-md-1.col-lg-1
        img.img-circle(src=category.imageSrc alt=category.name)
      div.col-xs-8.col-sm-9.col-md-10.col-lg-10
        strong= category.name 
        span.text-muted  Title: #{category.title}
      div.col-xs-1.col-sm-1.col-md-1.col-lg-1.dropdown-user(data-for="." + index + "_" + category.name)
        i.glyphicon.glyphicon-chevron-down.text-muted

    div(class="row user-infos" class=[index + "_" + category.name])
      div.col-xs-12.col-sm-12.col-md-10.col-lg-10.col-xs-offset-0.col-sm-offset-0.col-md-offset-1.col-lg-offset-1
        div.panel.panel-primary
          div.panel-heading
            div.panel-title= title
          div.panel-body
            div.row
              div.col-md-3.col-lg-3.hidden-xs.hidden-sm
                img.img-circle(src=category.imageSrc alt=category.name)
              div.col-xs-2.col-sm-2.hidden-md.hidden-lg
                img.img-circle(src=category.imageSrc alt=category.name)
              div.col-md-9.col-lg-9.hidden-xs.hidden-sm
                strong= title
                table.table.table-user-information
                  tbody
                    tr
                      td Description: 
                      td= category.description
                    tr
                      td Số lượng:
                      td= category.amount
          div.panel-footer
            span
              button.btn.btn-sm.btn-warning(data-toggle="tooltip"
                data-original-title="Chỉnh sửa")
                i.glyphicon.glyphicon-edit 
              button.btn.btn-sm.btn-danger(data-toggle="tooltip"
                data-original-title="Xóa category này")
                i.glyphicon.glyphicon-remove
